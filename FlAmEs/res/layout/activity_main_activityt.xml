<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivityt" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:text="Awesome Quotes for you..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22dp" />

    <Button
        android:id="@+id/Af"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lo"
        android:layout_below="@+id/lo"
        android:layout_marginTop="24dp"
        android:text="Affection"
        android:textSize="18dp"
        android:typeface="serif" />

    <Button
        android:id="@+id/ma"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Af"
        android:layout_below="@+id/Af"
        android:layout_marginTop="24dp"
        android:text="Marriage"
        android:textSize="18dp"
        android:typeface="serif" />

    <Button
        android:id="@+id/en"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ma"
        android:layout_below="@+id/ma"
        android:layout_marginTop="18dp"
        android:text="Enemy"
        android:textSize="18dp"
        android:typeface="serif" />

    <Button
        android:id="@+id/lo"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fr"
        android:layout_below="@+id/fr"
        android:layout_marginTop="20dp"
        android:text="Love"
        android:textSize="18dp"
        android:typeface="serif" />

    <Button
        android:id="@+id/si"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/en"
        android:layout_below="@+id/en"
        android:layout_marginTop="14dp"
        android:text="Siblings"
        android:textSize="18dp"
        android:typeface="serif" />

    <Button
        android:id="@+id/tbk"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/si"
        android:layout_alignRight="@+id/textView1"
        android:textSize="18dp"
        android:typeface="serif"
        android:layout_marginRight="17dp"
        android:text="Go Back" />

    <Button
        android:id="@+id/fr"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="Friend"
        android:textSize="18dp"
        android:typeface="serif" />

</RelativeLayout>
